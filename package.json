{
  "name": "pokedex-api",
  "version": "1.0.9",
  "description": "Pok√©dex REST API built with Node.js, Express, and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:safe": "kill-port 3000 && npm run dev",
    "dev:win": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "cross-env NODE_ENV=test playwright test",
    "test:manual": "cross-env NODE_ENV=test playwright test --config=playwright.config.ts",
    "test:api": "cross-env NODE_ENV=test playwright test tests/api/",
    "test:e2e": "cross-env NODE_ENV=test playwright test tests/e2e/",
    "scrape:pokemon": "ts-node scripts/scrape-pokemon-data.ts",
    "dev:all": "concurrently \"npm run dev:win\" \"cd frontend && npm install && npm run dev\"",
    "dev:all:safe": "kill-port 3000 && kill-port 3001 && npm run dev:all",
    "ci:setup": "node scripts/ci-setup.js",
    "ci:full": "node scripts/ci-setup.js --frontend",
    "ci:test-only": "node scripts/ci-setup.js --tests-only",
    "ci:quick": "npm install && node scripts/ci-setup.js",
    "setup:all": "npm install && cd frontend && npm install && cd ..",
    "prepare": "husky"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "concurrently": "^9.1.2",
    "cross-env": "^10.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.6",
    "kill-port": "^2.0.1",
    "prettier": "^3.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  }
}
